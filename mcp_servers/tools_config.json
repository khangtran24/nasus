{
  "name": "tools",
  "description": "Local development tools (linters, formatters, etc.)",
  "tools": {
    "pylint": {
      "command": "pylint",
      "description": "Python linter for code quality checks",
      "args": ["--output-format=json"]
    },
    "ruff": {
      "command": "ruff",
      "description": "Fast Python linter",
      "args": ["check", "--output-format=json"]
    },
    "mypy": {
      "command": "mypy",
      "description": "Static type checker for Python",
      "args": ["--show-error-codes", "--no-error-summary"]
    },
    "black": {
      "command": "black",
      "description": "Python code formatter",
      "args": ["--check", "--diff"]
    },
    "pytest": {
      "command": "pytest",
      "description": "Python testing framework",
      "args": ["-v", "--tb=short"]
    }
  },
  "notes": "These tools run locally and don't require MCP server"
}
