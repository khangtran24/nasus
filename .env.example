# Model Provider Configuration
# Options: anthropic, openrouter, claude_agent_sdk
# - anthropic: Direct Anthropic API
# - openrouter: Multi-model access via OpenRouter
# - claude_agent_sdk: Claude Agent SDK with Pro subscription support
MODEL_PROVIDER=anthropic

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# OpenRouter API (only needed if using MODEL_PROVIDER=openrouter)
OPENROUTER_API_KEY=sk-or-your-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Claude Agent SDK (uses ANTHROPIC_API_KEY, supports Pro subscription)
CLAUDE_AGENT_SDK_USE_PRO_FEATURES=true
CLAUDE_AGENT_SDK_PRO_TIER=

# Jira Configuration
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token

# Confluence Configuration
CONFLUENCE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_EMAIL=your-email@example.com
CONFLUENCE_API_TOKEN=your-confluence-api-token

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token

# GitHub CI Configuration
# GitHub personal access token with repo, workflow, and actions permissions
GITHUB_TOKEN=ghp_your-github-token-here
GITHUB_OWNER=your-github-username-or-org
GITHUB_REPO=your-repository-name

# Agent Configuration
MAX_CONTEXT_TOKENS=4000
SUMMARIZATION_THRESHOLD=0.8
DEFAULT_MODEL=claude-sonnet-4-5-20250929

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/agent.log
LOG_ROTATION_ENABLED=true
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_USE_RICH_CONSOLE=true

# Session Storage
SESSION_STORAGE_PATH=sessions/
