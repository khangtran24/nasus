{
    "hooks": {
        "SessionStart": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "uv run python .claude/hooks/session_start.py",
                        "statusMessage": "Initializing memory system..."
                    }
                ]
            }
        ],
        "UserPromptSubmit": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "uv run python .claude/hooks/memory_capture.py",
                        "statusMessage": "Capturing conversation memories..."
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "uv run python .claude/hooks/post_tool_use.py",
                        "statusMessage": "Capturing tool observations..."
                    }
                ]
            }
        ],
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "uv run python .claude/hooks/on_stop.py",
                        "statusMessage": "Generating session summary..."
                    }
                ]
            }
        ],
        "SessionEnd": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "uv run python .claude/hooks/session_end.py",
                        "statusMessage": "Finalizing session..."
                    }
                ]
            }
        ]
    }
}